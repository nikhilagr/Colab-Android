<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <!--Linear Layout for title and imageview-->


                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="18dp"
                        android:layout_marginLeft="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorheading"
                        android:text="Title"
                        android:fontFamily="sans-serif-thin"
                        android:id="@+id/colab_list_item_title"
                        android:layout_weight="9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />





                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/colab_list_item_creator"
                    android:lines="1"
                    android:text="Created by, Nikhil Agrawal"
                    android:textSize="14dp"
                  />

            <LinearLayout
                android:gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    app:srcCompat="@drawable/ic_schedule_accent_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/colab_list_item_end_date"
                    android:text="12/12/2019" />

                <ImageView
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/ic_people_accent_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/colab_list_item_total_members"
                    android:text="0"/>

                <ImageView
                    android:layout_marginLeft="16dp"
                    app:srcCompat="@drawable/ic_assignment_accent_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/colab_list_item_total_taskss"
                    android:text="0"/>
            </LinearLayout>


            <ImageView
                    android:layout_marginTop="4dp"
                    android:src="@drawable/projmanagement2"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/colab_list_item_desc"
                android:lines="2"
                android:textSize="14dp"
                android:text="lorem dsgjlasdjl sklnflkpoaskf njsn fkn asknfkjn kjnas fksj f jksdfhjk sdf jhsjdf ksjfh aksdj askjdfhakjshf  "
                />


            <View
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_colab_detail"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginLeft="8dp"
                    android:text="Details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_colab_edit"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginLeft="8dp"
                    android:text="Edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>